@model WebProgramlama_Proje.Models.User

@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.EntityFrameworkCore;
@using WebProgramlama_Proje.Data;

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <link href="@Url.Content("~/css/UserLogin.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
    <div class=" center">
        <section>
            <form action="" method="post">

                <p class="LoginText">@Localizer["Login"]</p>
                <hr />
                <div class="text-danger"></div>

                <div class="form-group">
                    <label class="formHeader">@Localizer["MailAddress"]</label>
                    <br />
                    <input type="text" class="form-control" name="userMail" required="" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="formHeader">User Password</label>
                    <br />
                    <input type="text" class="form-control" name="userPass" required="" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" value="Login" class="LoginButton center">@Localizer["LoginButton"]</button>
                </div>

                <div class="form-group">
                    <a class="LoginPls" asp-area="" asp-controller="User" asp-action="Create">@Localizer["Register"]</a>
                </div>

            </form>
        </section>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
